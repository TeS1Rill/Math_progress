<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Math.Math_kv_yrav"
    android:background="@drawable/main_back">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/math_back_kv_yrav"
                android:layout_width="wrap_content"
                android:fontFamily="@font/intro"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/click_button"
                android:text="@string/back_button"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/intro"
                android:text="Введите коэффициенты:"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextText_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/white"
                android:digits="0123456789-."
                android:ems="10"
                android:fontFamily="@font/intro"
                android:textAllCaps="false"
                android:hint="Введите a"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/hint" />

            <EditText
                android:id="@+id/editText_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/white"
                android:digits="0123456789-."
                android:ems="10"
                android:fontFamily="@font/intro"
                android:hint="Введите b"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/hint" />

            <EditText
                android:id="@+id/editText_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/white"
                android:digits="0123456789-."
                android:ems="10"
                android:fontFamily="@font/intro"
                android:hint="Введите c"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/intro"
                android:textAllCaps="false"
                android:text="at^2 + bt + c = 0"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/white"
                android:textSize="23dp" />




            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/res_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="x1 = 0"
                android:fontFamily="@font/intro"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/res_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/intro"
                android:text="x2 = 0"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/res_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="x1 = 0"
                android:fontFamily="@font/intro"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/res_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/intro"
                android:text="x2 = 0"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="50dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_1_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_full"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/intro"
                android:layout_marginHorizontal="30dp"
                android:text="Решить"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_2_reset"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:fontFamily="@font/intro"
                android:layout_height="wrap_content"
                android:background="@drawable/button_full"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:text="сброс" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>