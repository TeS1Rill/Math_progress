<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Math.Math_arithmetics_svoistvo"
    android:background="@drawable/main_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back_onMenu_math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/click_button"
                android:gravity="left"
                android:fontFamily="@font/intro"
                android:padding="10dp"
                android:text="@string/back_button"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введите значения:"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25dp"
                android:padding="20dp"
                android:fontFamily="@font/intro"
                />

            <EditText
                android:id="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="60dp"
                android:backgroundTint="@color/white"
                android:digits="0123456789.-"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="@font/intro"
                android:hint="a1"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/hint" />

            <EditText
                android:id="@+id/n"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="60dp"
                android:backgroundTint="@color/white"
                android:digits="0123456789.-"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="@font/intro"
                android:hint="n"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/hint" />
            <EditText
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="60dp"
                android:backgroundTint="@color/white"
                android:digits="0123456789.-"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="@font/intro"
                android:hint="d"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/hint" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="an = 0"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/intro"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="40dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_1_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_full"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/intro"
                    android:layout_marginHorizontal="30dp"
                    android:text="Решить"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_2_reset"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/intro"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_full"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="30dp"
                    android:text="сброс" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
</RelativeLayout>